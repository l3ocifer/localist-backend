# ==============================================
# Localist Backend - Environment Configuration
# ==============================================

# Server Configuration
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://localist:localist123@localhost:5432/localist
DB_HOST=localhost
DB_PORT=5432
DB_NAME=localist
DB_USER=localist
DB_PASSWORD=localist123

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# MinIO Object Storage (S3-compatible)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=localist-uploads

# JWT Authentication
JWT_SECRET=dev-jwt-secret-change-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=dev-refresh-token-secret-change-in-production

# CORS Configuration
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# External APIs - Google Maps/Places
GOOGLE_MAPS_API_KEY=AIzaSyDOeMpiLYcJxBFr3EeOf4pnwCmfgb3AR1I
GOOGLE_PLACES_API_KEY=AIzaSyDOeMpiLYcJxBFr3EeOf4pnwCmfgb3AR1I

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=dev-session-secret-change-in-production
SESSION_EXPIRES_IN=86400

# Feature Flags
ENABLE_AI_RECOMMENDATIONS=false
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SOCIAL_AUTH=false
